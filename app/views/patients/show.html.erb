<html>
<body>
<header>
  <h1>Consultório Odontológico Sorria Bem - Detalhes do Paciente</h1>
</header>

<div class="container">
  <div class="pacient-details">
    <h2><%= @patient.full_name %></h2>
    <p>CPF: <%= @patient.cpf %></p>
    <p>Email: <%= @patient.email_address %></p>
    <p>Phone Number: <%= @patient.phone_number %></p>
  </div>

  <div>
    <%= link_to "Editar Paciente", edit_patient_path(@patient), class: "btn btn-primary" %>
    <%= button_to "Remover Paciente", @patient, method: :delete, data: { confirm: "Tem certeza que deseja remover este paciente?" }, class: "btn btn-danger" %>
    <%= link_to "Voltar para a lista de pacientes", patients_path, class: "btn btn-primary" %>
  </div>
</div>
</body>
</html>